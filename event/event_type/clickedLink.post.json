{
  "$schema": "http://api.contactlab.it/hub#",
  "type": "object",
  "description": "Customer clicked a link",
  "properties": {
    "customerId": {
      "type": "string",
      "pattern": "^.+$"
    },
    "bringBackProperties": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventBringBackProperties"
    },
    "type": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventType"
    },
    "context": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventContext"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "contextInfo": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventContextInfo"
    },
    "properties": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "The path of URL of the link"
        },
        "referer": {
          "type": "string",
          "description": "The referer of the page"
        },
        "search": {
          "type": "string",
          "description": "The parameters searched"
        },
        "title": {
          "type": "string",
          "description": "The title of link"
        },
        "url": {
          "type": "string",
          "description": "The URL of link",
          "format": "uri"
        },
        "linkTags": {
          "type": "array",
          "description": "The list of link tags",
          "items": {
            "type": "string"
          }
        },
        "extraProperties": {
          "type": "object",
          "description": "Extra pieces of information you can tie to events you track"
        }
      }
    }
  },
  "required": [
    "type",
    "context"
  ],
  "additionalProperties": false
}