{
  "$schema": "http://api.contactlab.it/hub#",
  "type": "object",
  "description": "The Agent of customer care replied to ticket from a customer",
  "properties": {
    "customerId": {
      "type": "string",
      "pattern": "^.+$"
    },
    "bringBackProperties": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventBringBackProperties"
    },
    "type": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventType"
    },
    "context": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventContext"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "contextInfo": {
      "$ref": "resource:/public/schema/enums.json#/definitions/EventContextInfo"
    },
    "properties": {
      "type": "object",
      "properties": {
        "ticketId": {
          "type": "string",
          "description": "The ID used to identify the ticket"
        },
        "category": {
          "type": "array",
          "description": "Categories list of ticket",
          "items": {
            "type": "string"
          }
        },
        "subject": {
          "type": "string",
          "description": "The subject of ticket"
        },
        "text": {
          "type": "string",
          "description": "The text of ticket"
        },
        "extraProperties": {
          "type": "object",
          "description": "Extra pieces of information you can tie to events you track"
        }
      }
    }
  },
  "required": [
    "type",
    "context"
  ],
  "additionalProperties": false
}